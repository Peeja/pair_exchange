source 'https://rubygems.org'

# Rails v3.2.12 is a security release.
# http://weblog.rubyonrails.org/2013/2/11/SEC-ANN-Rails-3-2-12-3-1-11-and-2-3-17-have-been-released/
gem 'rails', '3.2.12'

gem 'sqlite3'
gem 'jquery-rails'
gem 'omniauth-github'

# Devise v2.2.3 is a security release.
# http://blog.plataformatec.com.br/2013/01/security-announcement-devise-v2-2-3-v2-1-3-v2-0-5-and-v1-5-3-released/
gem 'devise', '~> 2.2.3'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :test, :development do
  gem 'rspec-rails'
end
